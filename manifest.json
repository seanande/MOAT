{
  "manifest_version": 2,

  "name": "MOAT",
  "description": "This extension will allow for quick authentication of online accounts",
  "version": "1.0",
  "SiteList": [],

  "browser_action": {
   "default_icon": "shield.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab",
   "tabs",
   "background"
   ],
  //"background": {
  //  "scripts": ["background.js"]
  //},
  "content_scripts": [ {
    "matches": ["https://*/*", "https://www.google.com/*"],
    "js": ["popup.js"],
    "run_at": "document_start"
  }]
}